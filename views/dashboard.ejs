<!-- views/dashboard.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        h1 {
            text-align: center;
        }
        .user-info {
            margin-bottom: 20px;
        }
        .user-info label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to Your Dashboard</h1>
        
        <div class="user-info">
            <p><strong>Username:</strong> <%= user.username %></p>
            <!-- Aquí puedes mostrar más información del usuario según tus necesidades -->
        </div>

        <p>This is your personalized dashboard. You can add more content here.</p>

        <a href="/logout">Logout</a> <!-- Ejemplo de un enlace para cerrar sesión -->

    </div>
</body>
</html>
